wood-button() {
	font: 35px/73px "Nuku Nuku";
	width: 198px;
	height: 70px;
	background: url("/img/wood-button.png");
	text-align: center;
	color: #9E7850;
	text-shadow: -1px -1px 0 rgba(black, .5);
	cursor: pointer;
	&:hover {
		background-position: 0px 70px;
		text-shadow: 1px 1px 0 rgba(black, .5);
	}
	&:active{
		text-shadow: -1px -1px 0 rgba(black, .5);
	}
}

back-button() {
	background-image: url('/img/back-button.png');
	position: absolute;
	size = 64px;
	height: size;
	width: size;
	left: 10px;
	bottom: 10px;
	box-shadow: 0 0 20px #333, inset 1px 1px 0 rgba(white, .5);
	border-radius: 50%;
	cursor: pointer; 
	background-position: -1px -1px;
	&:hover{
		background-position: -1px -76px;
	}
	&:active {
		bottom: 9px;
		background-position: -1px -1px;
	}
}

absoluteCenter(size) {
	height: size;
	width: size;
	top: 50%;
	margin-top: (size/-2);
	left: 50%;
	margin-left: (size/-2);
}



