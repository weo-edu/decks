@import 'nib';
@import '../common/common.styl';

/**
 * Mixins
 */

table-rows() {
	&:nth-child(even) { background: rgba(black, .05) }
	&:nth-child(odd) { background: rgba(black, .15) }
}

level() {
	position: absolute; 
	bottom: 0;
	size = 43px;
	height: size;
	width: size;
	border-radius: 50%;
	font: 25px/46px 'Fresca';
	color: #FFF;
	text-shadow: 1px 1px 0 rgba(black, .5);
	text-align: center;
	background: red;
	border: 4px solid #FFF;
	box-shadow: 0 0 10px rgba(black, .7);
	// box-shadow: 0 0 5px black, inset 1px 1px 0 rgba(white, .5), inset -1px -1px 0 rgba(black, .5);			
}

toggleButton() {
	cursor: pointer;
	box-shadow: 0 0 3px rgba(black, .8), inset 1px 1px 0 rgba(white, .5), inset -1px -1px 0 rgba(black, .5);
	border-radius: 4px;
	padding: 0 10px;
	&:hover {
		box-shadow: 0 0 5px rgba(black, .8), inset 1px 1px 0 rgba(white, .5), inset -1px -1px 0 rgba(black, .5);
	}
	&:active, &.active {
		box-shadow: 0 0 3px rgba(black, .8), inset 1px 1px 0 rgba(black, .3), inset 0 0 7px rgba(black, .5);	
	}
}

woodSides() {
	&:before, &:after {
		position: absolute;
		// top: 141px;
		z-index: 1;
		left: 0;
		content: '';
		height: 100%;
		border-left: 10px solid #42210B;
		width: 7px;
		background: #603813;
	}

	&:after {
		left: auto;
		right: 0;
		border-left: 0;
		border-right: 10px solid #42210B;
	}
}

