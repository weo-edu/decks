red-button() {
	background-image: url('/app!decks/img/red-button.png');
	bottom: 10px;
	width: 160px;
	height: 80px;
	text-align: center;
	font: 40px/85px "Fresca"
	color: #FFF;
	text-shadow: -1px -1px 0 rgba(black, .5);
	cursor: pointer;
	&:hover {
		background-position: 0px 81px;
		text-shadow: 1px 1px 0 rgba(black, .5);
	}
	&:active{
		bottom: 9px;
		text-shadow: -1px -1px 0 rgba(black, .5);
	}
