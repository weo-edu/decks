@import '../decks/client/mixins.styl';

#results-view {
	width: 900px;
	margin: 0 auto;
	padding-top: 20px;
	h2 {
		font-size: 60px;
	}
}

.results-table {
	margin-top: 40px;
	float: left;
	position: relative;
	z-index: 1;
	background: url('/app!common/textures/handmadepaper.png');
	border: 15px solid black;
	font: 35px/50px 'BleakChop';
	box-shadow: 0 0 10px rgba(black);
	.results-header {
		font: 35px/50px 'BleakChop';
		color: white;
		text-shadow: 1px 1px 0 rgba(black, .8);
		background: darken(red, 2);
	}
	td, th, > div {
		padding: 0 10px;
	}
	.total {
		font-size: 50px;
		td {
			padding: 10px;
		}
	}

	.bonus {
		width: 40px;
		height: 40px;
		float: left;
		margin: 5px 10px 0 0;
		background-image: url('/app!decks/img/bonus-icons.png');
		background-position: -10px -5px;
		&.critical { background-position: -10px 84px }
		&.time { background-position: -10px 124px }
		&.points { background-position: -10px 43px }
	}
}

#points-table {
	width: 680px;
	&:before, &:after {
		z-index: -1;
		position: absolute;
		top: -47px;
		left: 100px;
		content: '';
		width: 122px;
		height: 32px;
		background: url("/app!decks/img/bonus-icons.png") -67px -9px;
	}

	&:after {
		left: 400px;
	}
}

#errors-table {
	width: 205px;
	margin: 75px 0 0 -15px;
	position: relative;
	z-index: 0;
	font-size: 20px;
	.results-header, .results-footer {
		position: absolute;
		width: 185px;
	}
	.results-header {
		height: 48px;
		top: 0
	}
	.results-footer {
		bottom: 0;
	}

	.errors-table-inner {
		overflow-y: auto;
		height: 202px;
		padding: 48px 0 0;
		.error-scroll {
			clearfix();
			font-size: 16px;
			line-height: 1.2em;
			padding: 5px 10px;
			table-rows();
			cursor: pointer;
			transition: all .2s;
			div {
				float: left;
				&.title {
					width: 103px;
					overflow: ellipsis;
				}
			}
			&:hover {
				background: rgba(black, .25);
			}
			.solution {
				float: right;
				font-size: 12px;
			}
			&.reviewed {
				background-color: rgba(green, .6);
			}
		} 
	}
}

.rematch-button {
	red-button();
	clear: both;
	float: right;
	margin: -10px 30px 0 0;
	font-size: 30px;
}

.solution-dialog {
	.dialog {
		background: transparent;
		box-shadow: 0 0 0;
	}
	.close {
		size = 19px;
		line-height: size;
		font-family: 'BleakChop';
		height: size;
		width: size;
		border-radius: 50%;
		border: 2px solid #FFF;
		background: black;
		text-align: center;
		color: #FFF;
		top: 16px;
		right: 25px;
		box-shadow: 0 0 8px rgba(black, .6);
		&:hover {
			color: #FFF;
			border: 2px solid #FFF;
			box-shadow: 0 0 13px rgba(black, 1);
		}
		&:active {
			box-shadow: 0 0 8px rgba(black, .6);
		}
	}
	.content {	
		background: url("/app!decks/img/playground.png") center no-repeat;
		height: 514px;
		width: 548px;
		// margin-left: -174px;
	}
}