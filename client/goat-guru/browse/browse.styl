@import '../decks/client/mixins.styl'

/**
 * Goat Browse
 */

.cloud {
	height: 170px;
	width: 210px;
	margin: 0 0 -20px 40px;
	background: url('/app!decks/img/cloud.png');
	text-align: center;
	font: 32px/180px 'Fresca';
	color: #444;
	text-shadow: -1px -1px 0 #000;
}


/**
 * Friend Browse
 */

.browse-user {
	clearfix();
	position relative;
	.avatar {
		margin: 30px 10px 0 20px;
		float: left;
		z-index: 1;
		position: relative;
	}
	.category-title {
		margin-top: 25px !important;
	}
	.level {
		level();
		z-index: 0;
		border: 0;
		left: 100px;
		box-shadow: inset 1px 1px 0 rgba(white, .5), inset -1px -1px 0 rgba(black, .5);
	}
}

status-icon(color) {
	content: '';
	color: #FFF;
	height: 10px;
	width: 10px;
	position: absolute;
	right: 10px;
	top: 50%;
	margin-top: -5px;
	background: color;
	border-radius: 50%;
	box-shadow: inset 1px 1px 0 rgba(white, .3), inset -1px -1px 0 rgba(black, .3);
}

.friends-browse {
	.disconnected {
		position: relative;
		&:after {
			status-icon(red);
		}
	}
	.connected {
		position: relative;
		&:after {
			status-icon(lighten(green, 10));
		}
	}
}

.friends-browse, #tome-view {
	height: 100%;
	.browse {
		width: 724px !important;
		padding: 0 0 0 3px !important;
		float: none !important;
	}
	.sidebar.buddy-list {
		// margin-left: -17px;
		position: relative;
		.sidebar-inner {
			padding: 0 17px;
			background: url('/app!common/textures/handmadepaperA85.png');
			overflow-y: auto;
			height: 100%;
		}
		&:after {
			position: absolute;
			top: 0px;
			z-index: 1;
			right: 0;
			content: '';
			height: 100%;
			border-right: 10px solid #42210B;
			width: 7px;
			background: #603813;
		}

		h3 {
			text-align: center;
			margin: 50px 0 -19px;
		}

		.buddy {
			padding: 10px 10px;
			height: 40px;
			font: 17px/40px 'Fresca';
			text-transform: uppercase;
			clearfix();
			transition: background-color .2s;
			cursor: pointer;
			&:hover {
				background-color: rgba(#333, .1);
			}
			&.active {
				transition: background-color .4s;
				background-color: rgba(#000, .2);
			}
			.avatar-thumb {
				height: 40px;
				width: 40px;
				float: left;
				display: block;
				margin-right: 15px;
			}
		}
	}
}

/**
 * My Collection
 */

.collection-browse {
	width: 920px;
	margin: 0 auto;
}

.twist-stars {
	background-image: url('/app!decks/img/twist-stars.png');
	background-position: 0px -2px;
	width: 93px;
	height: 22px;
	position: absolute;
