@import '../decks/client/mixins.styl'

/**
 * Goat Browse
 */

.cloud {
	height: 170px;
	width: 210px;
	margin: 0 0 -20px 40px;
	background: url('/app!decks/img/cloud.png');
	text-align: center;
	font: 32px/180px 'Fresca';
	color: #444;
	text-shadow: -1px -1px 0 #000;
}


/**
 * Friend Browse
 */

.friends-browse, #tome-view {
	height: 100%;
	.browse {
		.tome-container {
			height: 213px;
			margin-bottom: 15px;
			.tome-title {
				top: 3px;
				height: 1em;
			}
		}
		width: 724px !important;
		padding: 0 0 0 3px !important;
		float: none !important;
	}
	.sidebar.buddy-list {
		// margin-left: -17px;
		position: relative;
		.sidebar-inner {
			padding: 0 17px;
			background: url('/app!common/textures/handmadepaperA85.png');
			overflow-y: auto;
			height: 100%;
		}
		&:after {
			position: absolute;
			top: 0px;
			z-index: 1;
			right: 0;
			content: '';
			height: 100%;
			border-right: 10px solid #42210B;
			width: 7px;
			background: #603813;
		}

		h3 {
			text-align: center;
			margin: 50px 0 -19px;
		}

		.buddy {
			padding: 10px 10px;
			height: 40px;
			font: 17px/40px 'Fresca';
			text-transform: uppercase;
			clearfix();
			transition: background-color .2s;
			cursor: pointer;
			&:hover {
				background-color: rgba(#333, .1);
			}
			&.active {
				transition: background-color .4s;
				background-color: rgba(#000, .2);
			}
			.avatar-thumb {
				height: 40px;
				width: 40px;
				float: left;
				display: block;
				margin-right: 15px;
			}
		}
	}
}

.twist-stars {
	background-image: url('/app!decks/img/twist-stars.png');
	background-position: 0px -2px;
	width: 93px;
	height: 22px;
	position: absolute;
	bottom: 20px;
	left: 50%;
	margin-left: -46px;
}

.twist-stars-1 { background-position: 0 -24px; }
.twist-stars-2 { background-position: 0 -46px; }
.twist-stars-3 { background-position: 0 -68px; }
.twist-stars-4 { background-position: 0 -90px; }
.twist-stars-5 { background-position: 0 -112px; }