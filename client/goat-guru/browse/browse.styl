@import '../decks/client/mixins.styl'

/**
 * Goat Browse
 */

.cloud {
	height: 170px;
	width: 210px;
	margin: 0 0 -20px 40px;
	background: url('/app!decks/img/cloud.png');
	text-align: center;
	font: 32px/180px 'Fresca';
	color: #444;
	text-shadow: -1px -1px 0 #000;
}


/**
 * Friend Browse
 */

.browse-user {
	clearfix();
	position relative;
	.avatar {
		margin: 30px 10px 0 20px;
		float: left;
		z-index: 1;
		position: relative;
	}

	.category-title {
		margin-top: 25px !important;
	}
	.level {
		level();
		z-index: 0;
		border: 0;
		left: 100px;
		box-shadow: inset 1px 1px 0 rgba(white, .5), inset -1px -1px 0 rgba(black, .5);
	}
	.filters {
		margin: 15px 0 0 150px;
	}
}

status-icon(color) {
	content: '';
	color: #FFF;
	height: 10px;
	width: 10px;
	position: absolute;
	right: 10px;
	top: 50%;
	margin-top: -5px;
	background: color;
	border-radius: 50%;
	box-shadow: inset 1px 1px 0 rgba(white, .3), inset -1px -1px 0 rgba(black, .3);
}


