@import '../decks/client/mixins.styl';
global-reset();

@font-face {
    font-family: 'BleakChop';
    src: url('/app!decks/fonts/bleakchopweo-webfont.eot');
    src: url('/app!decks/fonts/bleakchopweo-webfont.eot?#iefix') format('embedded-opentype'),
         url('/app!decks/fonts/bleakchopweo-webfont.woff') format('woff'),
         url('/app!decks/fonts/bleakchopweo-webfont.ttf') format('truetype'),
         url('/app!decks/fonts/bleakchopweo-webfont.svg#bleak_chop_weoregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td { user-select: none; }

h1, h2, h3, h4, h5 {
	font-family: 'BleakChop';
}

h2 {
	font: 50px/55px 'BleakChop';
	text-shadow: 1px 1px 0 black;
	color: white;
}

h3 {
	font: 40px/45px 'BleakChop';
	text-shadow: 1px 1px 0 black;
	color: #666;
}

h4 {
	font: 30px/35px 'BleakChop';
	text-shadow: 1px 1px 0 black;
	color: white;	
}

h5 {
	font: 15px 'Fresca';
	text-shadow: 1px 1px 0 black;
	color: white;	
}

/**
 * Main
 */

*::-webkit-scrollbar { width: 0; }

html, body, #content, #content > .container {
	height: 100%;
	min-height: 600px;
}

html, body {
	  background: linear-gradient(top,  #9DD6D0, #FFF);
	  overflow: hidden;
}

.dialog.await {
	font-family: 'Fresca';
	text-align: center;
	h2 {
		background: #555;
		color: #FFF;
		text-shadow: 0 0 0;
		font: 30px/35px 'BleakChop';
	}
	.content {
		padding: 0;
	}
	.inner-await {
		padding: 30px;
		font-size: 15px;
	}
}

.shelf {
	border-bottom: 10px solid #42210B;
	box-shadow: 0 10px 8px rgba(black, .15);
	margin: 15px 10px 20px;
	&:after {
		content: '';
		border-width: 0 18px 6px;
		border-color: transparent transparent #603813;
		border-style: solid;
		display: block;
	}
	&.connect {
		position: relative;
		margin-right: -7px;
		margin-left: -7px;
		z-index: 2;
		&:after {
			border-width: 0 8px 6px;
			border-color: transparent transparent lighten(#603813, 10);
		}
	}
}

#problem {
	visibility: hidden;
}

.avatar {
	border-radius: 50%;
	height: 95px;
	width: 95px;
	background-size: cover;
	box-shadow: inset 1px 1px rgba(white, .5), inset -1px -1px rgba(black, .5), 0 0 5px #333;
}

/**
 * Background
 */


#sun-container {
	height: 100%;
	width: 100%;
	position: absolute;
	z-index: 0;
	overflow: hidden;	
}


#sun {
	position: absolute;
	height: 3000px;
	width: 3000px;
	top: 50%;
	left: 50%;
	margin-top: -1500px;
	margin-left: -1500px;
	transition-origin: 50% 50%;
}

#content {
	height: 100%;
	position: relative;
	background-color: transparent;
	background-image: url('../img/greenmountains.png');
	background-size: cover;
	background-position: center;
	overflow: hidden;
	> .container {
		position: relative;
		width: 980px;
		margin: 0 auto;
	}
}


