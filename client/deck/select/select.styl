@import '../decks/mixins.styl';

#select-screen {
	ipad();
	background: url('/img/woodBg.jpg') center center no-repeat;

	.deck {
		width: 150px;
		height: 200px;
	}

	h1, #chosen {
		font: 40px/2em 'Nuku Nuku';
		color: #B3895D;
		text-shadow: -1px -1px 0 rgba(black, .7);
	}

	.next, .prev {
		cursor: pointer;
		height: 43px;
		width: 25px;
		background-image: url('/img/arrows.png');
		background-position: 0px 0px;
		position: absolute;
		right: 20px;
		top: 290px;
		&:hover {
			background-position: 0px 43px;
		}
		&:active {
			background-position: 0px 0px;
		}
	}

	.next {
		background-position: 25px 0px;
		&:hover {
			background-position: 25px 43px;
		}
		&:active {
			background-position: 25px 0px;
		}
	}

	// .selection-count {
	// 	margin-top: 5px;
	// 	margin-left: 5px;
	// }

	#players-area {
		width: 186px;
		background: url('/app!common/textures/roughcloth.png');
	}

	.awning {
		position: static;
		width: 758px;
		float: left;
		box-shadow: 0 0 0;
	}
}


#players-area {
	float: left;
	padding: 20px;
	height: 100%;
	width: 216px;
	p {
		color: #222;
		text-shadow: 1px 1px 0 rgba(white, .5);
	}
	.deck {
		margin-bottom: 2px;
	}
}

#card-grid {
	float: left;
	width: 700px;
}

.card {
	border-radius: 10px;
	border: 5px solid #EEE;
	width: 140px;
	height: 190px;
	float: left;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	transition: box-shadow .2s;
	box-shadow: inset 0 0 15px #333, 0 0 15px #333;
	// box-shadow: 0 0 15px #333, inset 1px 1px 1px rgba(white, .5), inset -1px -1px 1px rgba(black, .5);
	cursor: pointer;
	position: relative;
	&:hover {
		box-shadow: inset 0 0 15px #333, 0 0 25px #222;
	}

	user-select: none;
	// &:hover {
	// 	.stats-box {
	// 		opacity: 0;
	// 	}
	// }
}


.selection-count {
	back-button();
	background: #CF0000;
	size = 25px;
	height: size;
	width: size;
	font: 18px/size 'Fresca';
	color: #FFF;
	text-align: center;
	position: absolute;
	left: 135px;
	top: 215px;
	z-index: 99;
	user-select: none;
	&:active:after{
		bottom: -3px;
	}
	&:after {
		content: '-';
		size = 13px;
		height: size;
		width: size;
		border-radius: 50%;
		background: #00AEEF;
		position: absolute;
		line-height: 13px;
		font-size: 22px;
		bottom: -2px;
		right: -6px;
		box-shadow: 1px 1px 3px rgba(black, .5), inset 1px 1px 0 rgba(white, .5);
	}
}


.points-banner {
	top: -10px;
	left: -20px;
	position: absolute;
	.points {
		background: rgba(#00AEEF, 1);
		box-shadow: 1px 1px 3px #333;
		width: 55px;
		font: 17px 'Nuku Nuku';
		color: #FFF;
		text-shadow: -1px -1px 0 rgba(black, .5); 
		line-height: 19px;
		text-align: center;
		position: absolute;	
	}
	&:before {
		// display: none;
		content: '';
		position: absolute;
		top: 19px;
		blue = darken(#00AEEF, 10);
		border-top: 10px solid blue;
		border-left: 15px solid transparent;
	}

}
.stats-box {
	transition: opacity .3s;
	padding: 8px;
	position: absolute;
	bottom: 0;
	width: 124px;
	height: 30px;
	border-radius: 0 0 7px 7px;
	background: rgba(black, .5);
	ul {
		margin-left: 2px;
	}
}



.stat-circle {
	size = 30px;
	margin: 0 5px;
	border-radius: 50%;
	width: size;
	height: size;
	float: left;
	position: relative;
	overflow: hidden;
	background: #AAA;
	box-shadow: inset 0 0 5px black;

	.icon {
		size = 20px;
		height: size;
		width: size;
		border-radius: 50%;
		position: absolute;
		top: 50%;
		margin-top: (size/-2);
		left: 50%;
		margin-left: (size/-2);
		background-image: url('/img/stat-sprite.png');
		background-position: center 22px;
		&.speed {
			background-position: -5px 22px;
		}
		&.retention {
			background-position: 25px 22px;
		}
	}

	semi-circle(size) {
		content: '';
		transform-origin: (size/2) (size/2);
		width: (size/2);
		height: size;
		border-radius: (size/2) 0 0 (size/2);
		position: absolute;
		background: gold;
	}
	.inner {
		width: size;
		height: size;
		border-radius: (size/2);
		overflow: hidden;
		position: absolute;
		clip: rect(0px,size,size,(size/2));
		.first-semi {
			semi-circle(size);
		}
		.second-semi {
			semi-circle(size);
		}	
	}
	
}

.stat-circle.stage {
	position: absolute;
	top: 100px;
	left: 100px;
	.stage {
		position: absolute;
		width: 28px;
		line-height: 30px;
		text-align: center;
	}
	.second-semi {
		transition: all .4s;
	}
}

.scene {
	position: absolute;
	height: 100%;
	width: 100%;
}

.user {
	width: 100%;
	height: 222px;
	position: relative;
	color: #FFF;
	font-family: Fresca;
	text-transform: uppercase;
	font-size: 28px;
	p {
		position: absolute;
	}
	.avatar-tmb {
		box-shadow: inset 0 0 10px #333;
		background: rgba(tomato, .5);
		size = 120px;		
		height: size;
		width: size;
		position: absolute;
	}
}

.user-1 {
	p {
		top: 130px;
	}
}

.user-2 {
	p {
		top: 55px;
	}
	.avatar-tmb {
		bottom: 12px;
	}


	.fill {
		position: absolute;
		bottom: 0;
	}
}

#max_cards {
	width: 300px;
	font: 20px/1.2em 'Fresca';
	p {
		padding: 20px;
		font: 20px/1.2em 'Fresca';
		text-align: center;
	}
}


.bar {
	height: 210px;
	width: 50px;
	background: white;
	float: right;
	box-shadow: inset 0 0 8px #333;
	position: relative;
	.fill {
		background: #3FA9F5;
		width: 100%;
		transition: height .4s;
	}
}