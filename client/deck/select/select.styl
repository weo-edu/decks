	}
}



.stat-circle {
	size = 30px;
	margin: 0 5px;
	border-radius: 50%;
	width: size;
	height: size;
	float: left;
	position: relative;
	background: #AAA;
	box-shadow: inset 0 0 5px black;

	.icon {
		size = 20px;
		height: size;
		width: size;
		border-radius: 50%;
		position: absolute;
		top: 50%;
		margin-top: (size/-2);
		left: 50%;
		margin-left: (size/-2);
		background-image: url('/img/stat-sprite.png');
		background-position: center 22px;
		&.speed {
			background-position: -5px 22px;
		}
		&.retention {
			background-position: 25px 22px;
		}
	}

	semi-circle(size) {
		content: '';
		transform-origin: (size/2) (size/2);
		width: (size/2);
		height: size;
		border-radius: (size/2) 0 0 (size/2);
		position: absolute;
		background-color: gold;
	}
	.inner {
		width: size;
		height: size;
		border-radius: (size/2);
		position: absolute;
		clip: rect(0px,size,size,(size/2));
		.first-semi {
			semi-circle(size);
			transition: all .4s;
		}
		.second-semi {
			semi-circle(size);
			transition: all .4s;
		}	
	}
	
}

