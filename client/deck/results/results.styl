@import "nib";
@import "../common/common.styl"

#play-results {
	ipad();
	background: url('/img/woodBg.jpg') center center no-repeat;

	#slider {
		position: absolute;
		height: 100%;
		width: 100%;
		bottom: 200%;
		.slide {
			position: relative;
			height: 100%;
			width: 100%;
		}
		&.show-cards {
			bottom: 100%;
		}
		&.review {
			bottom: 0%;
		}
	}
	#card-grid {
		position: absolute;
		top: 8%;
		left: 50%;
		margin-left: -350px;

		.correct {
			.x {
				display: none;
			}
		}

		.incorrect {
			position: relative;
			.x {
				transition: all .3s;
				transform: scale(1);
				opacity: 1;
				size = 90px;
				font: 90px/1em Nuku;
				text-align: center;
				color: #FFF;
				background: #E60000;
				display: block;
				width: size;
				height: size;
				border-radius: 50%;
				position: absolute;
				top: 50%;
				margin-top: size*-.5;
				left: 50%;
				margin-left: size*-.5;
				box-shadow: 1px 1px 10px #333;
				text-shadow: -1px -1px 0 rgba(black, .5);
				&:hover {
					transform: scale(2);
					opacity: 0;
				}
			}
		}
	}

	#problem-container {
		margin: 0 auto;
		transform: scale(1);
		opacity: 1;
		float: none;

	}

	.review-back, .solution {
		position: absolute;
		font: 47px/40px Nuku;
		color: #B3895D;
		text-shadow: -1px -1px 0 rgba(black, .5);
		transition: text-shadow .2s;
		cursor: pointer;
		user-select: none;
		&:hover {
			text-shadow: 1px 1px 0 rgba(black, .5);
		}
		&:active {
			text-shadow: -1px -1px 0 rgba(black, .5);
		}
	}

	.review-back {
		left: 50px;
		top: 260px;
	}

	.solution {
		right: 40px;
		top: 75px;
	}
}

width = 740px;

#result-box {
	height = 420px;
	width: width;
	background: #EEE;
	height: height;
	position: absolute;
	left: 50%;
	margin-left: width * -.5;
	top: 50%;
	margin-top: height * -.5;
	box-shadow: 0 0 10px #333;
	h2 {
		background: #333;
		color: #FFF;
		padding: 0 10px;
		font-size: 30px;
		line-height: 1.5em;
		text-align: center;
	}
	.inner-results {
		padding: 20px;
		position: relative;
		overflow: hidden;
	}
	.winner-circle {
		size = 250px;
		height: size;
		width: size;
		position: absolute;
		left: 50%;
		margin-left: size * -.5;
		top: size * -.55;
		border-radius: 50%;
		background: #E31A21;
		font-size: 45px;
		font-family: "Nuku";
		text-align: center;
		color: white;
		.winner {
			margin-top: 140px;
		}
		.winner-name {
			font: 28px "Fresca";
		}
	}

	.results {
		float: left;
		margin-top: height - 270px;
		font: 30px/1.3em "MayonaiseCondRegular";
		text-transform: uppercase;
		text-align: center;
		width: 260px;
		.score {
			display: block;
			float: left;
			width: 40px;
			&.left {
				text-align: left;
			}
			&.right {
				text-align: right;
			}
		}
		.label {
			display: block;
			float: left;
			width: 180px;
		}
		.rule {
			border-bottom: 2px dashed #777;
			clear: both;
			padding-top: 15px;
			margin-bottom: 10px;
		}
	}

	#you, #opponent {
		width: 220px;
		height: height - 85;
		position: relative;
		.user {
			height: 165px;
			width: 220px !important;
			position: absolute;
			bottom: 0;
			width: auto;
			color: #333;
			p {
				width: 100%;
			}
		}
		.bar {
			position: absolute;
			top: -90px;
			.fill {
				position: absolute;
				bottom: 0;
			}
		}
	}

	#you {
		float: left;
		.bar {
			left: 130px;
		}
	}

	#opponent {
		float: right;
		.user {
			float: right;
			text-align: right;
			.avatar-tmb {
				right: 0;
			}
		}
		.bar {
			right: 130px;
			margin-right: 0;
		}
	}
}

#results-nav, #view-cards-nav {
	position: absolute;
	bottom: 50px;
	clear: both;
	font: 56px Nuku;
	margin-left: 175px;
	color: #B3895D;
	li {
		transition: text-shadow .2s;
		display: block;
		float: left;
		margin-right: 40px;
		text-shadow: -1px -1px 0 rgba(black, .5);
		cursor: pointer;
		user-select: none;
		&:hover {
			text-shadow: 1px 1px 0 rgba(black, .5);
		}
		&:active {
			text-shadow: -1px -1px 0 rgba(black, .5);
		}
	}
}

#view-cards-nav {
	li {
		width: 700px;
		text-align: center;
	}
}