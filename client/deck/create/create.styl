@import 'nib'

//	DECKS CREATOR
////////////////////////////

ipadheight = 672px;
ipadwidth = 1024px;
imgheight = 592px;
imgwidth = 637px;
height = 36px;



#card-inner{
	#rule-container{
	margin: 0 auto;
	overflow-x:hidden;
	overflow-y: auto;
	height:118px;
	margin-top:5px;
	}
	#rules{
		width:100%;
	}
	#bottom-button{
		position:relative;
		margin:25px auto;
	}
}


.instant_update{
	height:height;
	width:60%;
	float:right;
	padding:0px;
	border:none;
	&:active{
		border:none;
	}
}

size = 320px;
width = size/1.45;
depth = width/3;
offset =depth/2;
color = lighten(#599adf, 35);
margin = 15px;


.deck-create-screen{
section#viewport{
	//-webkit-animation:infinite-spinning $time linear;
	position:relative;
	top:25%;
	margin:0 auto;
	width:width;
	height:size;
	perspective: none;
	transform-style: preserve-3d;
}
article#box{
	width:width;
	height:size;
 	transform-style: preserve-3d;
 	position:absolute;
}
.transition{
	transition: all .8s ease-in-out;
}
#box section{
	cursor:move;
	text-align:center;
	transform-style: flat;
	backface-visibility: hidden;
	position:absolute;
	background-color: rgba(darken(#3276c1,2), 0.5);
	outline:2px solid lighten(#599adf, 10);
	// @include box-shadow(inset 0px 0px 30px #3FA9F5);
	h1, h2, h3{
		font-family:'MayonaiseCondRegular';
		font-size:35px;
		padding:offset/2;
		z-index:1;
		//color:lighten($color,20);
	}
	p{
		color: darken(color, 82);
		font-size:20px;
		line-height:25px;
	}
}

#front, #back{
 width:width;
 height: size;
 transform: translate3d(0px, 0px, offset);
 .full-image{
 	left:0px;
 	top: 0px;
	z-index: 0;
	position: absolute;
	height: size;
	width: width;
 }
 h1,h2,h3,p{
	position:relative;
}
.deck-title{
	padding:10px;
	margin:10px auto;
}
}
#back{
	transform: rotateY(180deg) translate3d(0px, 0px, offset);
}
#top, #bottom{
 width:width;
 height: depth;
 transform: rotateX(90deg) translate3d(0px, 0px, offset);
}
#bottom{
	transform: rotateX(-90deg) translate3d(0px, 0px, size - offset);
}
#left, #right{
 width: depth;
 height: size;
 transform: rotateY(-90deg) translate3d(0px, 0px, offset);
}
#right{
	transform: rotateY(90deg) translate3d(0px, 0px, width - offset);
}
.title{
	background-color:#3FA9F5;
	height:75px;
	color:white;
	font-size:50px;
	line-height:75px;
	padding:0px 20px;
	font-family:'MayonaiseCondRegular';
}
#look-input, #template-input{
	left:-800px;
	}	
}
