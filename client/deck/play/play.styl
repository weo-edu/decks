@import 'nib';
@import '../common/common.styl';

#deck-play-screen {
	ipad();
	background: url('/img/woodBg.jpg') center no-repeat;
	#players-area {
		float: right;
	}
}

#problem-container {
	float: left;
	width: 768px;
	height: 100%;
	background: url('/app!common/textures/roughcloth.png');
	box-shadow(inset 0 0 80px #777);
	transition: all .4s;
	transform: scale(0);
	opacity: 0;
	&.show {
		opacity: 1;
		transform: scale(1);
	}
}

#problem {
	width: 100%;
	text-align: center;
	position: absolute;
	size = 60px;
	top: 50%;
	margin-top:  size * -1;
	font: size/size "Fresca";
	color: #555;
	text-shadow: 1px 1px 0 #333;
}

#answer {
	background: none;
	outline: 0;
	text-align: center;
	font: 50px "Fresca";
	width: 120px;
	height: 57px;
	border: 0;
	border-bottom: 2px dotted #666;
	color: #555;
	text-shadow: 1px 1px 0 #333;
	margin-top: 30px;
}