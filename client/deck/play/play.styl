@import 'nib';
@import '../common/common.styl';

#deck-play-screen {
	ipad();
	background: url('/img/woodBg.jpg') center no-repeat;
	#players-area {
		float: right;
	}
}

#problem-container {
	float: left;
	width: 768px;
	height: 100%;
	background: url('/app!common/textures/roughcloth.png');
	box-shadow(inset 0 0 80px #777);
	transition: all .4s;
	transform: scale(0);
	opacity: 0;
	// margin-top: -100%;
	&.show {
		opacity: 1;
		transform: scale(1);
	}
}

#problem {
	width: 100%;
	text-align: center;
	position: absolute;
	size = 50px;
	line-height: size;
	font-size: size;
	top: 50%;
	margin-top:  size * -1;
	font-family: "Fresca";
	color: #333;
}